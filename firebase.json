{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "apphosting": {
        "backendId": "astro-library",
        "rootDir": "/",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "functions"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "auth": {
          "port": 9099
        },
        "functions": {
          "port": 5001
        },
        "firestore": {
          "port": 8080
        },
        "database": {
          "port": 9000
        },
        "storage": {
          "port": 9199
        },
        "ui": {
          "enabled": true
        },
        "singleProjectMode": true,
        "hosting": {
          "port": 5000
        }
    }
}
  